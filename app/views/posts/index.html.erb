<div id="blog-index">
  <h1>Blog</h1>

  <% if current_user && current_user.admin? %>
    <%= link_to "New post", new_post_path %>
  <% end %>

  <% if @posts.any? %>
    <% @posts.each do |post| %>
      <h3><%= link_to post.post_title, post_path(post) %></h3>
      <%= image_tag post.attached_image.url(:medium) %>
      <br><br>
      <p><%= post.post_content %></p>
      <br><br>
    <% end %>
  <% end %>
</div>
