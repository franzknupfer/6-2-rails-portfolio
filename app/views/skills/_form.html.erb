<% render "layouts/errors", :object => @skill %>

<%= bootstrap_form_for @skill do |f| %>
  <%= f.text_field :skill_name %>
  <br>
  <%= f.text_field :skill_short_description, label: "A short description for the home page" %>
  <br>
  <%= f.text_field :skill_full_description, label: "A longer description for the show page" %>
  <br>
  <%= f.text_field :skill_icon, label: "Add an icon" %>
  <br>
  <%= f.submit "Add skill", class: "btn btn-success" %>
<% end %>
<br>

<%= link_to "Return to skill page", skill_path(@skill) %>
<%= link_to "Return to home page", skills_path %>
